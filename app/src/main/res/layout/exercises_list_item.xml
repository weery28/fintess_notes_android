<?xml version="1.0" encoding="utf-8"?>
<com.zerobranch.layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:draggedItem="@id/ll_content"
        app:rightItem="@id/hidden_content"
        app:swipeDirection="left">

    <LinearLayout
            android:id="@+id/hidden_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/holo_red_light"
                android:scaleType="center"
                android:src="@drawable/baseline_delete_24" />

        <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/holo_orange_light"
                android:scaleType="center"
                android:src="@drawable/baseline_edit_24" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:background="@color/charcoal_grey"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/side_margin"
                android:textColor="@android:color/white"
                app:autoSizeMaxTextSize="20dp"
                app:autoSizeMinTextSize="6dp"
                app:autoSizeStepGranularity="2dp"
                app:autoSizeTextType="uniform"
                tools:text="very" />

        <include layout="@layout/fraction" />

        <TextView
                android:id="@+id/tv_sets"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                tools:text="4" />

        <LinearLayout
                android:id="@+id/ll_aproaches"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@drawable/transparent_divider"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end" />

        <ImageView
                android:scaleType="center"
                android:layout_width="8dp"
                android:layout_height="24dp"
                android:paddingStart="4dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@android:color/holo_red_light"
                android:src="@drawable/baseline_arrow_left_24" />

    </LinearLayout>

</com.zerobranch.layout.SwipeLayout>
