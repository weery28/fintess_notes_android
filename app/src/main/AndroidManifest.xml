<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.coweery.fitnessnotes">

    <application
        android:name=".context.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateAlwaysHidden"
        android:theme="@style/Theme.MaterialComponents.NoActionBar" >
        <activity android:name=".screens.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".screens.splash.SplashActivity" />
        <activity android:name=".screens.registration.RegistrationActivity" />
    </application>
</manifest>
